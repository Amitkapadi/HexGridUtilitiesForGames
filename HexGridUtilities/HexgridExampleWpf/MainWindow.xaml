<Window x:Class="HexgridExampleWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <DockPanel x:Name="_dockPanel" Cursor="Arrow">
        <ScrollViewer x:Name="_scrollViewer" ClipToBounds="True" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" DockPanel.Dock="Bottom">
            <WindowsFormsHost x:Name="_host"/>
        </ScrollViewer>
    </DockPanel>
</Window>
